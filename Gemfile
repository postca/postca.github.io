source 'https://rubygems.org/'

# json should be a default installed package, but archlinux break this.
gem 'json'

gem 'jekyll', '>=3.8.6'

group :jekyll_plugins do
    gem 'jekyll-feed'
    gem 'jekyll-sitemap'
    gem 'jekyll-paginate'
    gem 'jekyll-seo-tag'
    gem 'jekyll-archives'
    gem 'tzinfo-data'
    gem 'tzinfo'
end
